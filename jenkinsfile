pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        AWS_ACCOUNT_ID = '108322181673'
        IMAGE_NAME = 'mywebapp'
        ECR_REPO = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${IMAGE_NAME}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/MugeshkannaaRS/my-webapp-cicd.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Login to AWS ECR') {
            steps {
                withAWS(credentials: 'aws-credentials', region: "${AWS_REGION}") {
                    sh '''
                        aws ecr get-login-password --region $AWS_REGION | \
                        docker login --username AWS --password-stdin $AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com
                    '''
                }
            }
        }

        stage('Push to ECR') {
            steps {
                sh '''
                    docker tag $IMAGE_NAME:latest $ECR_REPO:latest
                    docker push $ECR_REPO:latest
                '''
            }
        }

        stage('Deploy on EC2') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ec2-user@13.232.109.82 '
                            aws ecr get-login-password --region ap-south-1 | \
                            docker login --username AWS --password-stdin 108322181673.dkr.ecr.ap-south-1.amazonaws.com &&
                            docker pull $ECR_REPO:latest &&
                            docker stop mywebapp || true &&
                            docker rm mywebapp || true &&
                            docker run -d -p 80:3000 --name mywebapp $ECR_REPO:latest
                        '
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '✅ Deployment successful! Visit http://13.232.109.82'
        }
        failure {
            echo '❌ Deployment failed. Check logs.'
        }
    }
}
